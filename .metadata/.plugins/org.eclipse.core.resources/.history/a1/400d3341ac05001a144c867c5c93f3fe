package com.TheCubicJedi.main;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;

public class Boss extends GameObject {

		
		private Handler handler;
		Color bossColor = new Color(255,83,73);
		

		public Boss(float x, float y, ID id, Handler handler) {
			super(x, y, id);
			
			this.handler = handler;
			
			velX = -1;
			velY = 0;
		}
		
		
		
		public Rectangle getBounds() {
			return new Rectangle((int) x, (int) y, 150, 150); 
		}
		
		public void tick() {
			x += velX;
			
			if(x <= 0 || x >= Game.WIDTH - 20) velX*= -1;
			
		}

		public void render(Graphics g) {
			
			g.setColor(bossColor);
			g.fillRect((int) x, (int) y, 150, 150);
			
		}
}
