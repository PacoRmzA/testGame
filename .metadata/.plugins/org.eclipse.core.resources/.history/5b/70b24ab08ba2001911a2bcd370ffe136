package com.TheCubicJedi.main;

import java.awt.event.KeyAdapter;
import java.awt.event.KeyEvent;

public class KeyInput extends KeyAdapter {
	
	private Handler handler;
	HUD hud;
	
	public KeyInput(Handler handler, HUD hud) {
		this.handler = handler;
		this.hud = hud;
	}

	public void keyPressed (KeyEvent e) {
		int key  = e.getKeyCode();
		
		if(key == KeyEvent.VK_Z) hud.setScoreP1(hud.getScoreP1()+10);
		if(key == KeyEvent.VK_X) hud.setScoreP2(hud.getScoreP2()+10);
		if(key == KeyEvent.VK_C) hud.setScoreP3(hud.getScoreP3()+10);
		if(key == KeyEvent.VK_V) hud.setScoreP4(hud.getScoreP4()+10);

		
		for(int i = 0; i < handler.object.size(); i++) {
			
			GameObject tempObject = handler.object.get(i);
			
			if(tempObject.getID() == ID.Player){
			
				if(key == KeyEvent.VK_W) tempObject.setVelY(-10);
				if(key == KeyEvent.VK_A) tempObject.setVelX(-10);
				if(key == KeyEvent.VK_S) tempObject.setVelY(10);
				if(key == KeyEvent.VK_D) tempObject.setVelX(10);
				
			}
			
			if(tempObject.getID() == ID.Player2){
				
				if(key == KeyEvent.VK_I) tempObject.setVelY(-10);
				if(key == KeyEvent.VK_J) tempObject.setVelX(-10);
				if(key == KeyEvent.VK_K) tempObject.setVelY(10);
				if(key == KeyEvent.VK_L) tempObject.setVelX(10);
				
			}
			
			if(tempObject.getID() == ID.Player3){
				
				if(key == KeyEvent.VK_UP) tempObject.setVelY(-10);
				if(key == KeyEvent.VK_LEFT) tempObject.setVelX(-10);
				if(key == KeyEvent.VK_DOWN) tempObject.setVelY(10);
				if(key == KeyEvent.VK_RIGHT) tempObject.setVelX(10);
				
			}
			
			if(tempObject.getID() == ID.Player4){
				
				if(key == KeyEvent.VK_T) tempObject.setVelY(-10);
				if(key == KeyEvent.VK_F) tempObject.setVelX(-10);
				if(key == KeyEvent.VK_G) tempObject.setVelY(10);
				if(key == KeyEvent.VK_H) tempObject.setVelX(10);
				
			}
			
		}
		
	}
	
public void keyReleased (KeyEvent e) {
	int key  = e.getKeyCode();
	
	for(int i = 0; i < handler.object.size(); i++) {
		
		GameObject tempObject = handler.object.get(i);
		
	if(tempObject.getID() == ID.Player){
		
		if(key == KeyEvent.VK_W) tempObject.setVelY(0);
		if(key == KeyEvent.VK_A) tempObject.setVelX(0);
		if(key == KeyEvent.VK_S) tempObject.setVelY(0);
		if(key == KeyEvent.VK_D) tempObject.setVelX(0);
		
	}
	
	if(tempObject.getID() == ID.Player2){
		
		if(key == KeyEvent.VK_I) tempObject.setVelY(0);
		if(key == KeyEvent.VK_J) tempObject.setVelX(0);
		if(key == KeyEvent.VK_K) tempObject.setVelY(0);
		if(key == KeyEvent.VK_L) tempObject.setVelX(0);
		
	}
	
	if(tempObject.getID() == ID.Player3){
		
		if(key == KeyEvent.VK_UP) tempObject.setVelY(0);
		if(key == KeyEvent.VK_LEFT) tempObject.setVelX(0);
		if(key == KeyEvent.VK_DOWN) tempObject.setVelY(0);
		if(key == KeyEvent.VK_RIGHT) tempObject.setVelX(0);
		
	}
	
	if(tempObject.getID() == ID.Player4){
		
		if(key == KeyEvent.VK_T) tempObject.setVelY(0);
		if(key == KeyEvent.VK_F) tempObject.setVelX(0);
		if(key == KeyEvent.VK_G) tempObject.setVelY(0);
		if(key == KeyEvent.VK_H) tempObject.setVelX(0);
		
	}
	
	}
	
	if(key == KeyEvent.VK_ESCAPE) System.exit(1);
	
	}
	
	
}
